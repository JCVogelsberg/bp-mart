<h1>New Product</h1>

<form>
  <div class="form-group">
    <label for="name">Name</label>
    {{#each error in errors.name}}
      {{error.message}}
    {{/each}}
    {{input type="text" id="name" class="form-control" value=name}}
  </div>

  <div class="form-group">
    <label for="price">Price</label>
    {{#each error in errors.price}}
      {{error.message}}
    {{/each}}
    {{input type="text" id="price" class="form-control" value=price}}
  </div>

  <div class="form-group">
    <label for="photo">Photo</label>
    {{#each error in errors.photo}}
      {{error.message}}
    {{/each}}
    {{input type="text" id="photo" class="form-control" value=photo}}
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    {{#each error in errors.description}}
      {{error.message}}
    {{/each}}
    {{input type="text" id="description" class="form-control" value=description}}
  </div>

  <button {{action createProduct}} class="btn btn-default">Create Product</button>
</form>

<br>
<br>
<p>{{name}}</p>
<p>{{price}}</p>
<p>{{photo}}</p>
<p>{{description}}</p>

<br><br><br>
<p>{{#link-to 'products'}}Return to homepage{{/link-to}}</p>
